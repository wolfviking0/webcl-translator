#version 100

attribute vec4 vertexPos;
attribute vec4 vertexColor;
attribute vec2 vertexTexCoord;

varying vec4 color;
varying vec2 texCoord;

uniform mat4 MVP;

void main()
{    
    texCoord = vertexTexCoord;
    color = vertexColor;
    gl_Position = MVP*vertexPos;    
}

